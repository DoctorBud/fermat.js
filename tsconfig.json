{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es2016"
    ],
    "outDir": "build",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true
  },
  "exclude": [
    "node_modules"
  ]
}
